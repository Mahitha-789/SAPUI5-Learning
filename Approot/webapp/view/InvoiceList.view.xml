<mvc:View
   controllerName="ui5.walkthrough.controller.InvoiceList"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">

   <List
      id="invoiceList"
      class="sapUiResponsiveMargin"
      width="auto"
      items="{
         path : 'invoice>/Invoices',
         sorter : {
            path : 'ShipperName',
            group : true
         }
      }">

      <headerToolbar>
         <Toolbar>
            <Title text="{i18n>invoiceListTitle}"/>
            <ToolbarSpacer/>
            <SearchField
               width="50%"
               search=".onFilterInvoices"/>
         </Toolbar>
      </headerToolbar>

      <items>
         <ObjectListItem
            title="{invoice>Quantity} x {invoice>ProductName}"
            number="{invoice>ExtendedPrice}"
            numberUnit="{view>/currency}">

            <attributes>
               <ObjectAttribute text="{invoice>ShipperName}"/>
               <ObjectAttribute text="{invoice>ShippedDate}"/>
            </attributes>

            <firstStatus>
               <ObjectStatus 
                  text="{
                     path: 'invoice>Status',
                     formatter: '.statusText'
                  }"/>
            </firstStatus>
         </ObjectListItem>
      </items>
   </List>
</mvc:View>

